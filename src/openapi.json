{
  "openapi": "3.0.0",
  "info": {
    "title": "Voting API",
    "version": "1.0.0",
    "description": "This API allows users to participate in a voting system by setting up a database, casting votes, and retrieving vote results."
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local server"
    }
  ],
  "paths": {
    "/setup": {
      "get": {
        "summary": "Setup the database",
        "description": "Initializes the database with the required table for storing votes.",
        "responses": {
          "200": {
            "description": "Database setup successfully."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/results": {
      "get": {
        "summary": "Retrieve voting results",
        "description": "Retrieves all votes from the database.",
        "responses": {
          "200": {
            "description": "A JSON array of all votes.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "choice": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/cast": {
      "post": {
        "summary": "Cast a vote",
        "description": "Allows a user to cast a vote by providing their choice.",
        "requestBody": {
          "description": "Vote choice",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "vote": {
                    "type": "string",
                    "description": "The choice being voted for."
                  }
                },
                "required": [
                  "vote"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Vote cast successfully."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    }
  }
}