{
  "openapi": "3.0.0",
  "info": {
    "title": "Voting API",
    "version": "1.0.0",
    "description": "An API for setting up a voting system, casting votes, and retrieving voting results."
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local server"
    }
  ],
  "paths": {
    "/setup": {
      "get": {
        "summary": "Initialize the database with the votes table",
        "responses": {
          "200": {
            "description": "Table created successfully"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/results": {
      "get": {
        "summary": "Retrieve all votes",
        "responses": {
          "200": {
            "description": "A list of votes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Vote"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/cast": {
      "post": {
        "summary": "Cast a vote",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CastVote"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Vote cast successfully"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Vote": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "choice": {
            "type": "string"
          }
        }
      },
      "CastVote": {
        "type": "object",
        "properties": {
          "vote": {
            "type": "string"
          }
        },
        "required": [
          "vote"
        ]
      }
    }
  }
}