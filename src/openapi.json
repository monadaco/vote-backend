{
  "openapi": "3.0.0",
  "info": {
    "title": "Voting API",
    "version": "1.0.0",
    "description": "An API to create and manage votes."
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local server"
    }
  ],
  "paths": {
    "/setup": {
      "get": {
        "summary": "Setup the database",
        "operationId": "setupDatabase",
        "responses": {
          "200": {
            "description": "Setup completed successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/results": {
      "get": {
        "summary": "Get voting results",
        "operationId": "getResults",
        "responses": {
          "200": {
            "description": "Voting results retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "choice": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/cast": {
      "post": {
        "summary": "Cast a vote",
        "operationId": "castVote",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "vote": {
                    "type": "string"
                  }
                },
                "required": ["vote"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Vote cast successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {}
}