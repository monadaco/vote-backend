{
  "openapi": "3.0.0",
  "info": {
    "title": "Voting API",
    "version": "1.0.0",
    "description": "An API for managing and casting votes"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local server"
    }
  ],
  "paths": {
    "/setup": {
      "get": {
        "summary": "Setup Database",
        "description": "Initializes the database with required tables.",
        "responses": {
          "200": {
            "description": "Database setup successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/results": {
      "get": {
        "summary": "Get Voting Results",
        "description": "Retrieves all the votes that have been cast.",
        "responses": {
          "200": {
            "description": "A list of votes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "choice": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/cast": {
      "post": {
        "summary": "Cast a Vote",
        "description": "Allows a user to cast a vote.",
        "requestBody": {
          "description": "Vote being cast",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "vote": {
                    "type": "string"
                  }
                },
                "required": [
                  "vote"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Vote cast successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {}
  }
}